    //"format-muted": "<span foreground='#fab387'>Ôë¶ </span>",
    //"format-icons": [ "<span foreground='#fab387'>ÔÄ®</span>" ]
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôüè",
      "headset": "Ôüç",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
  },

  "tray": {
    "spacing": 8,
  },

  "custom/notification": {
    "tooltip": true,
    "format": " {icon} ",
    "format-icons": {
      "notification": "Ôë∂",
      "none": "Ôíö",
      "dnd-notification": "Ôë∏",
      "dnd-none": "Ôë∏",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
